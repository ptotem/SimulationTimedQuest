<!DOCTYPE html>
<html>
<head>
  <title>SimulationTimedQuest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <nav class="navbar navbar-fixed-top header" role="navigation">
      <div class="navbar-inner" style="position: relative">
        <div class="container">
          <div class="navbar-header">
            <a href="#" class="brand" onclick="javascript:window.location.href='/'; return false;"><img src="/assets/logo.png" class="logo"></a>
          </div>
          <% if user_signed_in? %>
              <div class="name-block" style="overflow: hidden; position: absolute; right: 300px; top: 5px;">
                <h3 style="color: #ffffff;">
                  Hello, <%= current_user.name rescue "" %>
                </h3>
              </div>

              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a style="color: white; padding-top: 35%;" href="#" class="dropdown-toggle non-style-hover" data-toggle="dropdown" role="button" aria-expanded="false">
                    Options
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu" role="menu">
                    <li>
                      <%= link_to "Change your password", edit_user_registration_path %>
                    </li>
                    <li>
                      <%= link_to "Sign out", destroy_user_session_path,:class => "trigger_signout", :method => :delete,:style => 'display: none'%>
                      <%= link_to "Sign out", destroy_user_session_path,:class => "sign_out_link", :method => :delete%>
                      <!--<a href="#" class="sign_out_link">Sign Out</a>-->
                      <%#= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => "sign_out_link" ,:style => 'display: none'%>
                    </li>
                  </ul>
                </li>
              </ul>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row row_style">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= render 'layouts/messages' %>

          <%# if notice %>
            <!--<p class="alert alert-success"><%#= notice %></p>-->
          <%# end %>
          <%# if alert %>
            <!--<p class="alert alert-danger"><%#= alert %></p>-->
          <%# end %>

          <%= yield %>
        </div>
      </div>
    </div>


    <script type="text/javascript">

      function user_time_spent(){
          time_left = clock.getTime().time
          var data = {time_left:[]};
          data["time_left"].push(time_left);
          $.ajax({
              url:"/update_time",
              type:"POST",
              data:JSON.stringify(data),
              contentType:"application/json",
              success:function (data) {
                if(data != 0) {
                  if(window.location.pathname != '/quinterrogation1' && window.location.pathname != '/quinterrogation2' ) {
                    if(data == 3300){
                      alert("Time's up! We are redirecting you to the last section now!")
                      window.location = "/quinterrogation1"
                    }
                  }
                } else {
                  if(window.location.pathname != '/mcq' || window.location.pathname != '/msq' || window.location.pathname != '/quinterrogation1' || window.location.pathname != '/quinterrogation2') {
                    alert("Time's up! Your score has been submitted!")
                    window.location = "/game_end"
                  }
                }
              }
          });
      }



        setInterval(function(){
            user_time_spent()
        },1000)

        $('.sign_out_link').click(function(){
            user_time_spent()
        })


    </script>




</body>
</html>
